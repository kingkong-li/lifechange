<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/bt_go_leaked_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="去深入了解内存"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_algorithm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="去学习算法"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_know_lifecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="去了解控件生命周期"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="学习链表"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_generics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="学习泛型"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="学习ui"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="学习定位"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_aidl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="学习aidl"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_learn_blue_tooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="15dp"
            android:text="学习蓝牙"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


    </LinearLayout>
</ScrollView>